<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="8dp" />  <!-- Adjust radius as needed -->

    <!-- Dotted stroke/border -->
    <stroke
        android:width="1dp"
        android:color="#FF000000"
    android:dashWidth="4dp"
    android:dashGap="2dp" />  
    <!-- Transparent fill -->
    <solid android:color="#00000000" />  <!-- Fully transparent -->
</shape>