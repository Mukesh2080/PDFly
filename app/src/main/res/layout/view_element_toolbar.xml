<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp"
    android:id="@+id/element_toolbar"

    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_palette_line"
            android:contentDescription="Change Color" />

        <ImageButton
            android:id="@+id/btn_stroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:src="@drawable/line_weight_24dp"
            android:contentDescription="Change Stroke" />

        <ImageButton
            android:id="@+id/btn_text_size_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_text_increase_24dp"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="Text Size Increase"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_text_size_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_text_decrease_24dp"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="Text Size Decrease"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/context_toolbar_selector"
            android:src="@drawable/ic_format_bold_24dp"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="Text Bold"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_fill_color"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="Text Bold"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit_24dp"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="Edit Text"
            android:visibility="visible" />
    </LinearLayout>

</androidx.cardview.widget.CardView>