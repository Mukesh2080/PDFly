<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Signature image preview -->
    <ImageView
        android:id="@+id/imageSignature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/selected_signature_bg"
        android:contentDescription="Signature" />

    <!-- Delete Icon floating top-right partially outside -->
    <ImageButton
        android:id="@+id/deleteSignature"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="-12dp"
        android:background="@drawable/circle_button_bg"
        android:src="@drawable/ic_delete_24dp"
        android:tint="@color/white"
        android:contentDescription="Delete Signature" />
</FrameLayout>
